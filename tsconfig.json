{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "outDir": "./dist/esm",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationMap": true
  },
  "include": [
    "./src",
  ]
}